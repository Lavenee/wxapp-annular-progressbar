.progressbar {
  position: relative;
  margin: 100px auto;
  width: 120px;
  height: 120px;
}

.left-container, .right-container {
  border-top-left-radius: 50%;
  border-top-right-radius: 50%;
  border-bottom-right-radius: 50%;
  border-bottom-left-radius: 50%;
  width: 120px;
  height: 120px;
  background-color: white;
  position: absolute;
  box-shadow: 0px 0px 2px dodgerblue inset;
}

.left-container {
  clip: rect(auto 60px auto auto);
}

.right-container {
  /*Step5 把父级DIV用"clip:rect"遮罩为一半*/
  clip: rect(auto auto auto 60px);
}

.left-circle, .right-circle {
  /*Step1 普通的正方形*/
  width: 120px;
  height: 120px;
  background-color: blue;
  /*Step2 用"border-radius"实现圆形*/
  border-top-left-radius: 50%;
  border-top-right-radius: 50%;
  border-bottom-right-radius: 50%;
  border-bottom-left-radius: 50%;
  position: absolute;
}

.left-circle {
  clip: rect(auto 60px auto auto);
  background-color: greenyellow;
}

.right-circle {
  /*Step3 用"clip:rect"遮罩为半圆*/
  clip: rect(auto auto auto 60px);
  background-color: salmon;
}

/*Step11 加入一个圆形覆盖在最上面，形成圆环形式*/

.message {
  width: 80px;
  height: 80px;
  margin: 20px;
  background-color: #fff;
  border-radius: 50%;
  position: absolute;
  background: radial-gradient(deepskyblue, deepskyblue, dodgerblue, dodgerblue);
  text-align: center;
  line-height: 80px;
  font-family: "Book Antiqua", Palatino, serif;
  font-size: 20px;
  text-shadow: 1px 1px 3px #333;
  color: white;
}
